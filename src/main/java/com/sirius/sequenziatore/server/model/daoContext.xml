<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- dataSource -->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
		<property name="url" value="jdbc:mysql://localhost:3306/trysirius"></property>
		<property name="username" value="root"></property>
		<property name="password" value=""></property>
	</bean>
	<!-- MySql implementation of dataSource -->
	<bean id="mysqldataSource" class="com.mysql.jdbc.jdbc2.optional.MysqlDataSource">
		<property name="url" value="jdbc:mysql://localhost:3306/trysirius"></property>
		<property name="user" value="root"></property>
		<property name="password" value=""></property>
	</bean>
	<!-- JDBC Template -->
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="mysqldataSource"></property>
	</bean>
	<bean id="telephoneDao" class="com.sirius.sequenziatore.server.model.TelephoneDao">
		<property name="jdbcTemplate" ref="jdbcTemplate"></property>
	</bean>
</beans>
